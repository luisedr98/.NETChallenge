@page "/todo"

<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<ul class="list-group mb-2">
    @foreach (var todo in todos)
    {
      <li class="list-group-item d-flex gap-2">
        <input
          type="checkbox"
          class="form-check-input align-self-center"
            @bind="todo.IsDone"
        />
        <input @bind="todo.Title" class="form-control" />
      </li>
    }
</ul>

<input placeholder="Something todo" @bind="newTodo" class="form-control mb-2" />
<button @onclick="AddTodo" class="btn btn-primary">Add todo</button>

@code {
    private List<TodoItem> todos = new(); private string? newTodo; private
    void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new
    TodoItem
                { Title = newTodo }); newTodo = string.Empty;
        }
    }
} 
